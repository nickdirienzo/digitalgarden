---
permalink: /essays/
layout: layouts/collection.njk
title: Essays
---

<ul class="collection-list">
{% for item in collections.essays %}
  <li>
    <a href="{{ item.url }}" class="internal-link">{{ item.data.title or item.fileSlug }}</a>
    <span class="note-date">{{ (item.data.created or item.date) | readableDate }}</span>
  </li>
{% else %}
  <li class="empty-message">No essays yet.</li>
{% endfor %}
</ul>
